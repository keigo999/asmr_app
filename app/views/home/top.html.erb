<div class = "top_block">
  <div class = "center-block text-center">
    <h1>asmrの世界へようこそ</h1>
    <p>心ゆくまでお楽しみください</p>
    <button type="button" class="btn btn-info">訪問する</button>
  </div>

  <div>
    <%= button_tag "新規登録", class: "btn btn-success", data: { toggle: "modal", target: "#sign_up" } %>
  </div>
</div>

<%# ここからはモーダルです %>

<div class="modal fade" id="sign_up">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">ご訪問ありがとうございます</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>


      <div class="modal-body">
        <div class="col-md-8 offset-md-2 mt-3">
          <div class="user-box">
            <h3 class="text-center">新規登録</h3>

            <%= form_for @user, url: home_create_path, method: :post do |f| %>
            <%= render "shared/errors" %>
              <div class="form-group">
                <%= f.label "ニックネーム" %><br />
                <%= f.text_field :name, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label "パスワード(6文字以上)" %>
                <%= f.password_field :password, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label "パスワード再確認" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.submit "送信", class: "btn btn-primary" %>
              </div>
            <% end %>

          </div>
        </div>
      </div>


      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">戻る</button>
      </div>
    </div>
  </div>
</div>