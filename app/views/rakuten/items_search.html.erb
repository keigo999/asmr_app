<div class = "container text-black">
	<div class = "row">
	<% @items.each do |item| %>
		<div class = "item col-md-4">
			<img src="<%= item['mediumImageUrls'][0] %>" alt="">
			<a href="<%= item['affiliateUrl'] %>"></a>
			<h5 class = "pt-2">商品名</h5>
			<p><%= item['itemName'] %></p>
			<h5>値段</h5>
			<p><%= item['itemPrice'] %>円</p>
		</div>
	<% end %>
		
		
</div>

